                        <% end %>
                        </ul>
                      </div>
                    <% end %>


                    <div placeholder="Email*" name="email">
                      <%= form.label :Email %>
                      <%= form.text_field :Email %>
                    </div>

                    <div placeholder="Asunto*" name="sub">
                      <%= form.label :Asunto %>
                      <%= form.text_field :Asunto %>
                    </div>

                    <div placeholder="Mensaje*" name="message">
                      <%= form.label :Mensaje %>
                      <%= form.text_area :Mensaje %>
                    </div>

                    <div class="actions" value="SEND MESSAGE">
                      <%= form.submit %>
                    </div>
                      <% end %>
                </div>
               
